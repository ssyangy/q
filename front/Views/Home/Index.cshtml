<script type="text/javascript">

    module.load('global', function (global) {
        global.init();
        var $ = global.jq;
        module.load('jq.validation');

        $(function () {
            $('#inputmain').focus(function () {
                $(this).css('height', '40');
                $('#inputbtm').removeClass('height0');
            });

            $("body").bind("keyup", function (e) {
                var code = (e.keyCode ? e.keyCode : e.which);
                if (code != 13 && code != 65) return;
                var tarname = $(e.target).get(0).tagName;

                if (e.ctrlKey && tarname == 'TEXTAREA' && code == 13) {
                    $('#inputbtn').click();
                } else if (tarname != 'INPUT' && tarname != 'TEXTAREA' && code == 65) {
                    $('#inputmain').focus();
                }
            });

            $('#inputbtn').click(function () {
                alert('text has submit!!');
            });

            var selinp = $('#selinp>a.ui-selectmenu');
            selinp.width(selinp.width() + 18).append('<span class="ui-icon ui-icon-signal-diag"></span>');

            $('li.streambox').hover(function () {
                $(this).addClass('hover');
            }, function () {
                $(this).removeClass('hover');
            });

            $("form.vali").validationEngine({ promptPosition: "centerRight" });
            $("input.vali").click(function () {
                if ($('form.vali.' + $(this).attr('valiform')).validationEngine({ returnIsValid: true })) {
                    alert('yes');
                    return true;
                } else {
                    alert('no');
                    return false;
                }
            });
        });
    });
</script>


