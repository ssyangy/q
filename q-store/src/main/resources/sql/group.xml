<?xml version="1.0" encoding="GB2312"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">
<sqlMap namespace="groups">
	<typeAlias alias="group" type="q.domain.Group" />
	<typeAlias alias="pjg" type="q.domain.PeopleJoinGroup" />
	<typeAlias alias="gjc" type="q.domain.GroupJoinCategory" />
	<resultMap id="groupResult" class="group">
		<result property="id" column="id" />
		<result property="creatorId" column="creator_id" />
		<result property="name" column="name" />
		<result property="intro" column="intro" />
		<result property="avatarPath" column="avatar_path" />
		<result property="longitude" column="longitude" />
		<result property="latitude" column="latitude" />
		<result property="status" column="status" />
		<result property="created" column="created" />
		<result property="modified" column="modified" />
		<result property="joinNum" column="join_num" />
	</resultMap>
	<resultMap id="groupIdNameResult" class="group">
		<result property="id" column="id" />
		<result property="name" column="name" />
	</resultMap>
	<resultMap id="pjgResult" class="pjg">
		<result property="id" column="id" />
		<result property="peopleId" column="people_id" />
		<result property="groupId" column="group_id" />
		<result property="status" column="status" />
	</resultMap>
	<resultMap id="gjcResult" class="gjc">
		<result property="id" column="id" />
		<result property="groupId" column="group_id" />
		<result property="categoryId" column="category_id" />
		<result property="status" column="status" />
	</resultMap>

	<sql id="group.columns">
		id,
		creator_id,
		name,
		intro,
		avatar_path,
		longitude,
		latitude,
		status,
		created,
		modified,
		join_num
	</sql>
	<sql id="pjg.columns">
		id,
		people_id,
		group_id,
		status
	</sql>
	<sql id="gjc.columns">
		id,
		group_id,
		category_id,
		status
	</sql>

	<select id="selectIdNamesByIds" resultMap="groupIdNameResult">
		select
		id, name
		from `group`
		where id in
		<iterate open="(" close=")" conjunction=",">
			#[]#
        </iterate>
	</select>

	<select id="selectGroupIdsByIds" resultClass="long">
		select
		id
		from `group`
		where id in
		<iterate open="(" close=")" conjunction=",">
			#[]#
        </iterate>
	</select>

	<select id="selectGroupById" resultMap="groupResult">
		select
		<include refid="group.columns" />
		from `group`
		where id=#value#
	</select>

	<select id="selectGroupsByIds" resultMap="groupResult">
		select
		<include refid="group.columns" />
		from `group`
		where id in
		<iterate open="(" close=")" conjunction=",">
			#[]#
        </iterate>
		order by created desc
	</select>
	<select id="selectGroupsByLocation" resultMap="groupResult">
		select
		<include refid="group.columns" />
		from `group`
		where abs(longitude-#longitude#) &lt; 0.005
		and abs(latitude-#latitude#) &lt; 0.005
		order by join_num limit 100
	</select>
	<select id="selectAllGroups" resultMap="groupResult">
		select
		<include refid="group.columns" />
		from `group`
		order by created desc
	</select>

	<select id="selectGroupIdsByCatId" resultClass="long">
		select group_id
		from group_join_category
		where
		category_id = #value#
	</select>

	<select id="getPromotedGroupJoinCategoriesByCatIds" resultMap="gjcResult">
		select
		<include refid="gjc.columns" />
		from
		group_join_category
		where
		status = 0 and promote > 0
		<isNotNull prepend="and " property="categoryIds">
			category_id in
			<iterate property="categoryIds" open="(" close=")" conjunction=",">
				#categoryIds[]#
        	</iterate>
		</isNotNull>
	</select>

	<select id="selectNewGroups" resultMap="groupResult">
		select
		<include refid="group.columns" />
		from `group`
		order by created desc
		limit #value#;
	</select>

	<insert id="insertGroup">
		insert into `group`
		(
		<include refid="group.columns" />
		) values (
		#id#,
		#creatorId#,
		#name#,
		#intro#,
		#avatarPath#,
		#longitude#,
		#latitude#,
		0,
		now(),
		null,
		0
		)
	</insert>

	<insert id="insertGroupJoinCategory">
		insert into group_join_category
		(
		id,
		group_id,
		category_id,
		status,
		created,
		modified
		) values (
		#id#,
		#groupId#,
		#categoryId#,
		0,
		now(),
		null
		)
	</insert>

	<insert id="insertPeopleJoinGroup">
		insert into people_join_group
		(
		<include refid="pjg.columns" />
		) values (
		#id#,
		#peopleId#,
		#groupId#,
		#status#,
		now(),
		null
		)
	</insert>

	<update id="updatePeopleJoinGroupStatusByPeopleIdAndGroupId">
		update people_join_group set
		status = #status#,
		modified = null
		where
		people_id = #peopleId#
		and
		group_id = #groupId#
	</update>

	<select id="selectPeopleJoinGroupByPage" resultMap="pjgResult">
		select
		<include refid="pjg.columns" />
		from
		people_join_group
		where
		people_id=#peopleId#
		and
		group_id=#groupId#
	</select>

	<select id="selectJoinPeopleIdsByPage" resultClass="long">
		select people_id
		from people_join_group
		<dynamic prepend="where">
			<isNotNull prepend="and " property="status">
				status = #status#
	        </isNotNull>
			<isNotNull prepend="and " property="groupIds">
				group_id in
				<iterate property="groupIds" open="(" close=")" conjunction=",">
					#groupIds[]#
	        	</iterate>
			</isNotNull>
			<isNotNull prepend="and " property="groupId">
				group_id = #groupId#
			</isNotNull>
			<isNotNull prepend="and " property="startCreated">
				created &lt;=
				#startCreated#
			</isNotNull>
			<isNotNull prepend="and " property="startId">
				id &lt;= #startId#
			</isNotNull>
		</dynamic>
		<isNotNull property="groupIds">
			group by people_id
	    </isNotNull>
		order by created desc
		<isNotNull property="size">
			limit #startIndex#, #size#
		</isNotNull>
	</select>

	<select id="selectJoinGroupIdsByPage" resultClass="long">
		select group_id
		from people_join_group
		<dynamic prepend="where">
			<isNotNull prepend="and " property="status">
				status = #status#
	        </isNotNull>
			<isNotNull prepend="and " property="peopleId">
				people_id = #peopleId#
	        </isNotNull>
			<isNotNull prepend="and " property="groupIds">
				group_id in
				<iterate property="groupIds" open="(" close=")" conjunction=",">
					#groupIds[]#
	        	</iterate>
			</isNotNull>
			<isNotNull prepend="and " property="groupId">
				group_id = #groupId#
			</isNotNull>
			<isNotNull prepend="and " property="startCreated">
				created &lt;=
				#startCreated#
			</isNotNull>
			<isNotNull prepend="and " property="startId">
				id &lt;= #startId#
			</isNotNull>
		</dynamic>
		order by created desc
		<isNotNull property="size">
			limit #startIndex#, #size#
		</isNotNull>
	</select>

</sqlMap>